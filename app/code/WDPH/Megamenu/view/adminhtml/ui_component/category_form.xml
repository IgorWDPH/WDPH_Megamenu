<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="wdph_megamenu">
		<argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">WDPH Megamenu</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">99999</item>
            </item>
        </argument>
        <field name="wdph_megamenu_hide_item">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="label" xsi:type="string" translate="true">Hide Menu Item</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
        </field>
		<field name="wdph_megamenu_dropdown_type">
            <argument name="data" xsi:type="array">
				<item name="options" xsi:type="object">WDPH\Megamenu\Model\Attribute\Menutype</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Dropdown Type</item>
                </item>
            </argument>
        </field>
		<field name="wdph_megamenu_static_width">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Static Width</item>
					<item name="notice" xsi:type="string" translate="true">eg: 256px</item>
                </item>
            </argument>
        </field>
		<field name="wdph_megamenu_item_url">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Custom URL</item>
                </item>
            </argument>
        </field>
		<field name="wdph_megamenu_float">
            <argument name="data" xsi:type="array">
				<item name="options" xsi:type="object">WDPH\Megamenu\Model\Attribute\Floattype</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Float</item>
                </item>
            </argument>
        </field>
		<field name="wdph_megamenu_cat_label">
            <argument name="data" xsi:type="array">
				<item name="options" xsi:type="object">WDPH\Megamenu\Model\Attribute\Catlabel</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">60</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Category Label</item>
                </item>
            </argument>
        </field>
		<field name="wdph_megamenu_top_block_con">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
					<item name="sortOrder" xsi:type="number">70</item>
                    <item name="class" xsi:type="string">Magento\Catalog\Ui\Component\Category\Form\Element\Wysiwyg</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="label" xsi:type="string" translate="true">Top Block Content</item>
                    <item name="template" xsi:type="string">ui/form/field</item>                    
                    <item name="rows" xsi:type="number">3</item>
                </item>
            </argument>
        </field>
		<field name="wdph_megamenu_bot_block_cont">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
					<item name="sortOrder" xsi:type="number">80</item>
                    <item name="class" xsi:type="string">Magento\Catalog\Ui\Component\Category\Form\Element\Wysiwyg</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="label" xsi:type="string" translate="true">Bottom Block Content</item>
                    <item name="template" xsi:type="string">ui/form/field</item>                    
                    <item name="rows" xsi:type="number">3</item>
                </item>
            </argument>
        </field>
		<field name="wdph_megamenu_left_block_cont">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="sortOrder" xsi:type="number">90</item>
					<item name="class" xsi:type="string">Magento\Catalog\Ui\Component\Category\Form\Element\Wysiwyg</item>
					<item name="formElement" xsi:type="string">wysiwyg</item>
					<item name="label" xsi:type="string" translate="true">Left Block Content</item>
					<item name="template" xsi:type="string">ui/form/field</item>                    
					<item name="rows" xsi:type="number">3</item>
				</item>
			</argument>
		</field>		
		<field name="wdph_megamenu_left_block_w">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">100</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Left Block Width</item>
                </item>
            </argument>
        </field>
		<field name="wdph_megamenu_right_block_cont">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="sortOrder" xsi:type="number">110</item>
					<item name="class" xsi:type="string">Magento\Catalog\Ui\Component\Category\Form\Element\Wysiwyg</item>
					<item name="formElement" xsi:type="string">wysiwyg</item>
					<item name="label" xsi:type="string" translate="true">Right Block Content</item>
					<item name="template" xsi:type="string">ui/form/field</item>                    
					<item name="rows" xsi:type="number">3</item>
				</item>
			</argument>
		</field>		
		<field name="wdph_megamenu_right_block_w">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">120</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Right Block Width</item>
                </item>
            </argument>			
        </field>
		<field name="wdph_megamenu_item_back_c">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">130</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Item Background Color</item>
                </item>
            </argument>
			<settings>
				<additionalClasses>
					<class name="wdph-color-picker">true</class>
				</additionalClasses>				
			</settings>
        </field>
		<field name="wdph_megamenu_item_hover_c">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">140</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Item Hover Background Color</item>					
                </item>
            </argument>
			<settings>
				<additionalClasses>
					<class name="wdph-color-picker">true</class>
				</additionalClasses>				
			</settings>
        </field>
		<field name="wdph_megamenu_drop_back_c">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">150</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Dropdown Background Color</item>					
                </item>
            </argument>
			<settings>
				<additionalClasses>
					<class name="wdph-color-picker">true</class>
				</additionalClasses>				
			</settings>
        </field>		
		<field name="wdph_megamenu_font_color">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">160</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Font Color</item>					
                </item>
            </argument>
			<settings>
				<additionalClasses>
					<class name="wdph-color-picker">true</class>
				</additionalClasses>				
			</settings>
        </field>
		<field name="wdph_megamenu_font_hcolor">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">170</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Hover Font Color</item>					
                </item>
            </argument>
			<settings>
				<additionalClasses>
					<class name="wdph-color-picker">true</class>
				</additionalClasses>				
			</settings>
        </field>
		<field name="wdph_megamenu_drop_back_i">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
					<item name="sortOrder" xsi:type="number">180</item>
                    <item name="label" xsi:type="string" translate="true">Dropdown Background Image</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="componentType" xsi:type="string">fileUploader</item>
                    <item name="notice" xsi:type="string" translate="true">Allowed file types: jpeg, gif, png.</item>
                    <item name="maxFileSize" xsi:type="number">2097152</item>
                    <item name="allowedExtensions" xsi:type="string">jpg jpeg gif png svg</item>
					<item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="string">catalog/category_image/upload</item>
                    </item>
                </item>
            </argument>
        </field>
		<container name="wdph_megamenu_additional" >
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="sortOrder" xsi:type="number">999999</item>
				</item>
			</argument>
			<htmlContent name="html_content">				
				<block class="WDPH\Megamenu\Block\Adminhtml\Category\Config\Additionaljs" name="giftregistry" template="WDPH_Megamenu::category/config/category_colorpicker_js.phtml"/>
			</htmlContent>
		</container>		
    </fieldset>
</form>